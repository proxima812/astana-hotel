	{ src: img7, alt: "", title: "" },
	{ src: img5, alt: "", title: "" },
	{ src: img9, alt: "", title: "" },
	{ src: img10, alt: "", title: "" },
	{ src: img11, alt: "", title: "" },
	{ src: img12, alt: "", title: "" },
	{ src: img13, alt: "", title: "" },
	{ src: img14, alt: "", title: "" },
	{ src: img16, alt: "", title: "" },
	{ src: img17, alt: "", title: "" },
	{ src: img18, alt: "", title: "" },
]
---

<section class="lg:grid-cols-4 md:grid-cols-3 grid-cols-2 gap-3 grid">
	{
		photos.map((img, i) => (
			<div
				class={`rounded-xl shadow-md overflow-hidden h-full md:h-[170px]
					${i >= photos.length - 2 ? "md:col-span-2 md:h-[250px] lg:col-span-2" : ""}
				`}
			>
				<Image
					class="rounded-xl object-cover w-full h-full"
					src={img.src}
					title={img.title}
					alt={img.alt}
				/>
			</div>
		))
	}
</section>
