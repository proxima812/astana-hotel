const photos = [
	{ src: img1, alt: "", title: "" },
	{ src: img6, alt: "", title: "" },
	{ src: img15, alt: "", title: "" },
	{ src: img2, alt: "", title: "" },
	{ src: img8, alt: "", title: "" },
	{ src: img3, alt: "", title: "" },
